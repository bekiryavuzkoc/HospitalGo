<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".GetLocationFragment">


    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/findNearestHospitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Nearest Hospitals"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/hiad_emui_functional_red"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"

        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".GetLocationFragment">

        <EditText
            android:id="@+id/distanceID"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:hint="Enter your distance"/>

        <ImageView
            android:id="@+id/searchHospitalImage"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/searchlacotscirlce" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".GetLocationFragment">

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Your Latitude: "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/yourLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/hiad_emui_functional_blue"
            android:textStyle="bold"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".GetLocationFragment">
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/longtitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Latitude: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/yourLongtitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/hiad_emui_functional_blue"
            android:textStyle="bold"
            android:textSize="15sp"
            />

    </LinearLayout>

</LinearLayout>